<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Form View 1 Of eleve's Profiles -->
    <record id="view_eleve_eleve_form_1" model="ir.ui.view">
        <field name="name">eleve.eleve.form.1</field>
        <field name="model">eleve.eleve</field>
        <field name="arch" type="xml">
            <form string="Informations Elèves" >
                <header>
                    <button class="oe_highlight oe_stat_button" name="%(ecole.action_terminate_wizard)d" string="Mettre fin" type="action" icon="fa-ban" states="done" groups="ecole.group_ecole_administration" />
                    <button class="oe_stat_button" name="set_alumni" string="Anciens" type="object" icon="fa-archive" states="done" groups="ecole.group_ecole_administration" />
                    <button class="oe_stat_button" icon="fa-check" name="admission_done" type="object" string="Terminé" states="draft" groups="ecole.group_ecole_administration" />
                    <field name="state" widget="statusbar" statusbar_visible="alumni,terminate" attrs="{'invisible':[('state','=','done')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons"></div>
                    <div class="oe_inline">
                        <newline />
                        <separator string="Informations Personnelles" />
                        <b>
                            <field name="reg_code" readonly="1" />
                        </b>
                        <br />
                        <field name="photo" widget="image" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;"/>
                        <div class="oe_title">
                            <group>
                                <field name="name" placeholder="Prénom" nolabel="1" required="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <br />
                                <field name="middle" placeholder="Deuxième nom" nolabel="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <br />
                                <field name="last" placeholder="Nom" nolabel="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <br />
                                <field name="pid" invisible="1"/>
                            </group>
                        </div>
                    </div>
                    <group>
                        <group string="Information Elèves">
                            <field name="eleve_code" readonly="1" />
                            <field name="roll_no" help="Numéro de rôle de l'élève" readonly="1"/>
                            <field name="year" placeholder="Année" widget="selection" help="annee academique of eleve" attrs="{'readonly':['|',('state','in',['alumni','terminate']),('teachr_user_grp','=',True)]}"/>
                            <field name="ecole_id" placeholder="Ecole" widget="selection" help="Ecole of eleve" attrs="{'readonly':['|',('state','in',['alumni','terminate']),('teachr_user_grp','=',True)]}"/>
                        </group>
                        <group string="Informations Standard">
                            <field name="standard_id" placeholder="Standard" readonly="1" domain="[('ecole_id','=',ecole_id)]" widget="selection" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="division_id" placeholder="Division" invisible="1" widget="selection" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="medium_id" placeholder="Moyen"  readonly="1" widget="selection" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="street" string="Addresse" />
                            <div class="o_address_format">
                                <field name="street" class="o_address_street" placeholder="Rue..." attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="street2" class="o_address_street" placeholder="Rue2..." attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="city" placeholder="Ville" class="o_address_city" required="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="state_id" domain="[('country_id','=',country_id)]" class="o_address_state" required="1" placeholder="Etat" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="country_id" placeholder="Pays" class="o_address_country,oe_no_button" options="{&quot;no_open&quot;: True}" required="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" placeholder="Numéro Téléphone" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="mobile" placeholder="Numéro de Portable" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="email" placeholder="Addresse Email" String="Email" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="website" widget="url" placeholder="ex www.exemple.com" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            <field name="teachr_user_grp" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Géneral" name="general">
                            <group>
                                <group>
                                    <field name="cast_id" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" widget="selection" placeholder="Réligion/Caste"/>
                                    <field name="date_of_birth" widget="date" placeholder="Date De Naissance" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                    <field name="gender" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="Sexe" required="1"/>
                                    <field name="age"/>
                                </group>
                                <group>
                                    <field name="mother_tongue" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"  widget="selection" placeholder="Lanque Maternelle"/>
                                    <field name="admission_date" widget="date" placeholder="Date d'admission" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" readonly="1"/>
                                    <field name="maritual_status" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="État civil"/>
                                </group>
                                <newline />
                                <separator string="Détails des contacts d'urgence" colspan="4" />
                                <newline />
                                <group colspan="4" col="4">
                                    <field name="contact_phone" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="Numéro de Téléphone"/>
                                    <field name="contact_mobile" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="Numéro de Portable"/>
                                </group>
                                <newline />
                            </group>
                            <newline/>
                            <separator string="Motif de résiliation" attrs="{'invisible':[('state','in',['draft','done','alumni'])]}"/>
                            <group>
                                    <field name="terminate_reason" attrs="{'invisible':[('state','in',['draft','done','alumni'])]}" readonly="1"/>
                              </group>
                        </page>
                        <page string="Parents">
                            <field name="parent_id" 
                                        attrs="{'readonly':[('state','in',['alumni','terminate'])]}" 
                                        context="{'form_view_ref':'ecole.view_parent_form','default_parent_ecole':1}"
                                        options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </page>
                        <page string="Precedent Ecole">
                            <field name="previous_ecole_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['alumni','terminate'])]}">
                                <tree string="Details Precedent Ecole">
                                    <field name="name" />
                                    <field name="registration_no" />
                                    <field name="admission_date" />
                                    <field name="exit_date" />
                                    <field name="course_id" widget="selection" />
                                </tree>
                                <form string="Details Precedent Ecole">
                                    <separator string="Details Precedent Ecole" />
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Nom Ecole" />
                                        <field name="registration_no" placeholder="N° d'enregistrement" />
                                        <field name="admission_date" />
                                        <field name="exit_date" />
                                        <field name="course_id" widget="selection"/>
                                        <newline />
                                        <separator string="Details Matières"/>
                                        <field name="add_sub" nolabel="1" colspan="4" />
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Informations de famille">
                            <field name="family_con_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['alumni','terminate'])]}">
                                <form string="Coordonnées de la famille">
                                    <group>
                                        <group>
                                            <field name="rel_name" />
                                            <field name="stu_name" placeholder="Créer ou sélectionner un nom" attrs="{'invisible':[('rel_name','!=','exist')]}"
                                                    options="{&quot;no_create&quot;: True}"/>
                                            <field name="name" placeholder="Nom" attrs="{'invisible':[('rel_name','!=','new')]}"/>
                                            <field name="relation" placeholder="Entrez ou sélectionnez Relation" />
                                        </group>
                                        <group>
                                            <field name="phone" placeholder="Numéro Téléphone" />
                                            <field name="email" placeholder="ID Email" />
                                        </group>
                                    </group>
                                </form>
                                <tree string="Coordonnées de la famille">
                                    <field name="relative_name"/>
                                    <field name="relation" />
                                    <field name="phone" />
                                </tree>
                            </field>
                        </page>
                        <page string="Médicale">
                            <group>
                                <group string="Informations Sur Le Médecin">
                                    <field name="designation" placeholder="Désignation du médecin" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                    <field name="doctor_phone" placeholder="Contact avec le médecin Non" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                </group>
                                <group string="Physical Information">
                                    <field name="blood_group" placeholder="ex.B+,Ab+" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                    <field name="height" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="Height"/>
                                    <field name="weight" attrs="{'readonly':[('state','in',['alumni','terminate'])]}" placeholder="Weight"/>
                                </group>
                            </group>
                            <separator string="Le demandeur a-t-il des handicaps?" colspan="4" />
                            <group col="6" colspan="4">
                                <field name="eye" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="ear" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="nose_throat" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="respiratory" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="cardiovascular" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="neurological" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="muskoskeletal" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="dermatological" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                                <field name="blood_pressure" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            </group>
                            <separator string="Notes" colspan="4" />
                            <group col="6" colspan="4">
                                <field name="comment" placeholder="Notes sur le médical.." nolabel="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"/>
                            </group>
                        </page>
                        <page string="Certifications">
                            <field name="certificate_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['alumni','terminate'])]}">
                                <form string="Certification">
                                    <group col="4">
                                        <field name="description" placeholder="Description du certificat" />
                                        <field name="certi" />
                                    </group>
                                </form>
                                <tree string="Certifaicat" editable="top">
                                    <field name="description" required="1" placeholder="Entrer Déscription"/>
                                    <field name="certi" required="1" placeholder="Télécharger Cértificat"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Remarques">
                            <field name="description" nolabel="1" colspan="4" attrs="{'readonly':[('state','in',['alumni','terminate'])]}">
                                <form string="Détails supplémentaires">
                                    <group col="4" colspan="2">
                                        <field name="name" placeholder="Nom de domaine" />
                                        <field name="description" placeholder="Déscription" />
                                    </group>
                                </form>
                                <tree string="Remarques" editable="top">
                                    <field name="name" required="1" placeholder="Entrer Nom"/>
                                    <field name="description" placeholder="Entrer Déscription"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Historique" groups="ecole.group_ecole_administration,ecole.group_ecole_enseignant,ecole.group_ecole_parent,ecole.group_ecole_eleve">
                            <field name="history_ids" nolabel="1" colspan="4" readonly="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"
                                options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}">
                                <tree string="Historique">
                                    <field name="academice_year_id" required="1"/>
                                    <field name="standard_id" required="1"/>
                                    <field name="percentage"/>
                                    <field name="result"/>
                                </tree>
                                <form string="Historique">
                                    <group col="4" colspan="4">
                                        <field name="academice_year_id" placeholder="AnnéenAcadamique" />
                                        <field name="standard_id" placeholder="Sélectionner ou créer un standard" />
                                        <field name="percentage" />
                                        <field name="result" />
                                    </group>
                                </form>
                            </field>
                        </page>
                         <page string="Desciplines" >
                            <field name="descplines_ids" nolabel="1" colspan="4" readonly="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"
                                options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}">
                                <tree string="Despline">
                                    <field name="eleve_id" invisible="1" />
                                    <field name="subject_id" required="1"/>
                                    <field name="device_datetime" required="1"/>
                                    <field name="status"/>

                                </tree>
                            </field>
                         </page>
                         <page string="Sanction disciplinaire" >
                            <field name="sanction_ids" nolabel="1" colspan="4" readonly="1" attrs="{'readonly':[('state','in',['alumni','terminate'])]}"
                                options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}">
                                <tree string="sanction">
                                    <field name="eleve_id" invisible="1" />
                                    <field name="status" required="1"/>
                                    <field name="nombre" required="1"/>
                                </tree>
                            </field>
                         </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View 1 Of eleve's Profiles -->
    <record id="view_eleve_eleve_tree_1" model="ir.ui.view">
        <field name="name">eleve.eleve.tree.1</field>
        <field name="model">eleve.eleve</field>
        <field name="arch" type="xml">
            <tree string="Informations Elève" >
                <field name="pid" />
                <field name="name" />
                <field name="eleve_name" invisible="1" />
                <field name="year" widget="selection" />
                <field name="admission_date" />
                <field name="gender" />
                <field name="state" />
                <field name="ecole_id" />
            </tree>
        </field>
    </record>
    <!-- Search View 1 Of eleve's Profiles -->
    <record id="view_eleve_eleve_search_1" model="ir.ui.view">
        <field name="name">eleve.eleve.search.1</field>
        <field name="model">eleve.eleve</field>
        <field name="arch" type="xml">
            <search string="Informations Elève">
                <group col="10" colspan="4">
                    <field name="pid" />
                    <field name="eleve_name" invisible="1" />
                    <field name="year" />
                    <field name="gender" />
                    <field name="ecole_id" placeholder="Ecole"/>
                </group>
                <newline />
                <group expand="0" string="Par groupe..." colspan="12" col="10">
                    <filter name="class" string="Classe" help="By Class" context="{'group_by':'standard_id'}" />
                    <filter name="gender" string="Sexe" help="By Gender" context="{'group_by':'gender'}" />
                    <filter name="name" string="Nom" help="By Class" context="{'group_by':'eleve_name'}" />
                    <filter name="ecole" string="Ecole" help="By Ecole" context="{'group_by':'ecole_id'}" />
                    <filter name="state" string="Etat" help="By State" context="{'group_by':'state'}"/>
                </group>
                <separator/>
                <filter name="alumni" string="Ancien" domain="[('state','=', 'alumni')]" help="Admission In Confirm State"/>
                <filter name="terminate" string="Terminé" domain="[('state','=', 'terminate')]" help="Admission In Pending State"/>
                <filter name="done" string="Terminé" domain="[('state','=', 'done')]" help="Admission In Done State"/>
            </search>
        </field>
    </record>
    <!-- Kanban View Of eleve's Profiles -->
    <record id="eleve_eleve_kanban_view" model="ir.ui.view">
        <field name="name">Elèves KANBAN</field>
        <field name="model">eleve.eleve</field>
        <field name="arch" type="xml">
            <kanban default_group_by="standard_id" nocreate="1" >
                <field name="color"/>
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="color" t-value="kanban_color(record.color.raw_value || record.name.raw_value)" />
                        <div t-att-class="color + (record.color.raw_value == 1 ? ' oe_kanban_color_alert' : '')">
                            <div class="oe_kanban_box oe_kanban_color_border">
                                <div class="oe_kanban_box_header oe_kanban_color_bgdark oe_kanban_color_border oe_kanban_draghandle">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td class="oe_kanban_title1" align="left" valign="middle" style="padding-left:10px;">
                                                <h4>
                                                    <a type="open">
                                                        <field name="name" />
                                                        <field name="middle" />
                                                        <field name="last" />
                                                        <field name="eleve_name" invisible="1" />
                                                        <field name="standard_id" invisible="1" />
                                                        <field name="ecole_id" invisible="1" />
                                                        <field name="gender" invisible="1" />
                                                        <field name="state" invisible="1" />
                                                    </a>
                                                </h4>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_box_show_onclick_trigger oe_kanban_color_border">
                                    <table class="oe_kanban_table">
                                        <tr width="300">
                                            <td valign="top" width="64" align="left">
                                                <a type="open">
                                                    <img heigh="80" width="80" t-att-src="kanban_image('eleve.eleve', 'photo', record.id.raw_value)" alt="image"/>
                                                </a>
                                            </td>
                                            <td valign="top" align="left" style="padding-left:10px;">
                                                <table>
                                                    <tr>
                                                        <td>ID Elève :</td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="pid" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Standard : </td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="standard_id" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Date D'Admission : </td>
                                                        <td style="padding-left:10px;">
                                                            <b>
                                                                <field name="admission_date" />
                                                            </b>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <center>
                                                    <b>
                                                        <field name="gender" />
                                                    </b>
                                                </center>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="oe_kanban_buttons_set oe_kanban_color_border oe_kanban_color_bglight oe_kanban_box_show_onclick">
                                    <div class="oe_kanban_left">
                                        <a role="button" string="Modifier" class="btn btn-sm btn-default fa fa-pencil" type="edit" groups="ecole.group_ecole_administration"/>
                                        <a role="button" string="Changer Couleur" icon="color-picker" type="color" name="color" />
                                    </div>
                                    <br class="oe_kanban_clear" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- Form View OfRegistre D'admission Information -->
    <record id="view_eleve_eleve_form_2" model="ir.ui.view">
        <field name="name">eleve.eleve.form.2</field>
        <field name="model">eleve.eleve</field>
        <field name="arch" type="xml">
            <form string="Registre d'admission">
                <header>
                    <button class="oe_highlight oe_stat_button" name="set_terminate" string="Mettre fin" type="object" icon="fa-ban" states="done" groups="ecole.group_ecole_administration"/>
                    <button class="oe_stat_button" name="set_alumni" string="Ancien" type="object" icon="fa-archive" states="done" groups="ecole.group_ecole_administration" />
                    <button class="oe_stat_button" icon="fa-check" name="admission_done" type="object" string="Terminé" states="draft" groups="ecole.group_ecole_administration" />
                    <button class="oe_stat_button" icon="fa-ban" name="cancel_admission" type="object" string="Annuler" states="draft" groups="ecole.group_ecole_administration"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,cancel"/>
                </header>
                <sheet>
                    <div class="oe_inline">
                        <newline />
                        <separator string="Personal Information" />
                        <field name="photo" widget="image" class="oe_avatar oe_left" style="max-width:100px;max-height:117px;" />
                        <div class="oe_title">
                            <group>
                                <field name="pid" nolabel="1" readonly="1"/>
                                <br />
                                <field name="name" placeholder="Prénom" nolabel="1" required="1" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <br />
                                <field name="middle" placeholder="Deuxième nom" nolabel="1" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <br />
                                <field name="last" placeholder="Nom" nolabel="1" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <br/>
                                <field name="active" invisible="1"/>
                            </group>
                        </div>
                    </div>
                    <group>
                        <group string="Ecole Information">
                            <field name="ecole_id" placeholder="Nom Ecole" required="1"
                                attrs="{'readonly':[('state','=','alumni')]}" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="year" widget="selection" placeholder="Année Académique" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group string="Class Information">
                            <field name="medium_id" placeholder="Moyen" widget="selection" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="standard_id" placeholder="Classe" domain="[('ecole_id','=',ecole_id),('medium_id','=',medium_id)]" widget="selection" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="division_id" placeholder="Division" widget="selection" attrs="{'readonly':[('state','=','alumni')]}" invisible="1"/>
                            
                        </group>
                    </group>
                    <group colspan="4">
                        <group>
                            <label for="street" string="Addresse" />
                            <div class="o_address_format">
                                <field name="street" placeholder="Rue..." class="o_address_street" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <field name="street2" placeholder="Rue2..." class="o_address_street" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <field name="country_id" placeholder="Pays" class="o_address_country,oe_no_button" required="1" options="{&quot;no_open&quot;: True}" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <field name="city" placeholder="Ville" class="o_address_city" required="1" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <field name="state_id" class="o_address_state" domain="[('country_id','=',country_id)]" placeholder="Etat" options="{&quot;no_open&quot;: True}" required="1" attrs="{'readonly':[('state','=','alumni')]}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'readonly':[('state','=','alumni')]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="phone" placeholder="Numéro Téléphone" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="mobile" placeholder="Numéro Portable" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="email" placeholder="Adresse Email" String="Email" attrs="{'readonly':[('state','=','alumni')]}"/>
                            <field name="website" widget="url" placeholder="ex www.example.com" attrs="{'readonly':[('state','=','alumni')]}"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="General">
                            <form string="General">
                                <sheet>
                                    <group string="Information Général">
                                        <group>
                                            <field name="gender" placeholder="Sexe" attrs="{'readonly':[('state','=','alumni')]}" required="1"/>
                                            <field name="date_of_birth" placeholder="Date De Naissance" attrs="{'readonly':[('state','=','alumni')]}"/>
                                            <field name="age" />
                                        </group>
                                        <group>
                                            <field name="mother_tongue" widget="selection" placeholder="Langue Maternelle" attrs="{'readonly':[('state','=','alumni')]}"/>
                                            <field name="admission_date" placeholder="Date D'Admission" attrs="{'readonly':[('state','=','alumni')]}" readonly="1"/>
                                            <field name="maritual_status" placeholder="Sélectionnez le statut matrimonial" attrs="{'readonly':[('state','=','alumni')]}"/>
                                        </group>
                                        <newline />
                                        <separator string="Détails des contacts d'urgence" colspan="4" />
                                        <newline />
                                        <group colspan="4" col="4">
                                            <field name="contact_phone" attrs="{'readonly':[('state','=','alumni')]}" placeholder="Numéro de Téléphone"/>
                                            <field name="contact_mobile" attrs="{'readonly':[('state','=','alumni')]}" placeholder="Numéro de Portable"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </page>
                        <page string="Parents">
                            <field name="parent_id" attrs="{'readonly':[('state','=','alumni')]}"
                                context="{'form_view_ref':'ecole.view_parent_form','default_parent_ecole':1}"
                                options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                        </page>
                        <page string="Réferences">
                            <field name="reference_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','alumni')]}">
                                <tree string="Réference" editable="top">
                                    <field name="name" placeholder="Prénom"/>
                                    <field name="middle" placeholder="Deuxième nom"/>
                                    <field name="last" placeholder="Nom de famille"/>
                                    <field name="designation" placeholder="Désignation"/>
                                    <field name="phone" placeholder="Téléphone"/>
                                    <field name="gender" placeholder="Sexe"/>
                                </tree>
                                <form string="Réference">
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Prénom" required="True"/>
                                        <field name="middle" placeholder="Deuxième nom" />
                                        <field name="last" placeholder="Nom" />
                                        <field name="designation" placeholder="Désignation" />
                                        <field name="phone" placeholder="Numéro Téléphone" />
                                        <field name="gender" placeholder="Sexe"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Ecole précédente">
                            <field name="previous_ecole_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','alumni')]}">
                                <tree string="Details Ecole précédente">
                                    <field name="name" />
                                    <field name="registration_no" />
                                    <field name="admission_date" />
                                    <field name="exit_date" />
                                    <field name="course_id" widget="selection" />
                                </tree>
                                <form string="Details Ecole précédente">
                                    <separator string="Details Ecole précédente" />
                                    <group col="4" colspan="4">
                                        <field name="name" placeholder="Nom Ecole" />
                                        <field name="registration_no" placeholder="N ° d'enregistrement" />
                                        <field name="admission_date" placeholder="Date D'Admission "/>
                                        <field name="exit_date" placeholder="Date de sortie"/>
                                        <field name="course_id" placeholder="Cours" widget="selection"/>
                                        <newline />
                                        <separator string="Details Matière" />
                                        <field name="add_sub" nolabel="1" colspan="4"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Détails de famille">
                            <field name="family_con_ids" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','alumni')]}">
                                <tree string="Coordonnées de la famille">
                                    <field name="relative_name"/>
                                    <field name="relation" />
                                    <field name="phone" />
                                </tree>
                                <form string="Coordonnées de la famille">
                                    <group>
                                        <group>
                                            <field name="rel_name" placeholder="Nom" />
                                            <field name="stu_name" placeholder="Créez ou Selectionnez Nom" attrs="{'invisible':[('rel_name','!=','exist')]}"
                                                        options="{&quot;no_create&quot;: True}"/>
                                            <field name="name" placeholder="Nom" attrs="{'invisible':[('rel_name','!=','new')]}"/>
                                            <field name="relation" placeholder="Entrez ou sélectionnez Relation" />
                                            <field name="relative_name" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="phone" placeholder="Numéro De Téléphone" />
                                            <field name="email" placeholder="Addresse Email " />
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Remarques">
                            <form string="Remarques">
                                <field name="remark" placeholder="Remarque" nolabel="1" colspan="4" attrs="{'readonly':[('state','=','alumni')]}"/>
                            </form>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View OfRegistre D'admission Information -->

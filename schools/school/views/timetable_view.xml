        <!-- Form View Of Time Table Information -->
        <record id="view_time_table_form" model="ir.ui.view">
            <field name="name">time.table.form</field>
            <field name="model">time.table</field>
            <field name="arch" type="xml">

    <form string="TimeTable">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" placeholder="Enter Description"/>
                            <field name="school_id" placeholder="Select School" widget="selection"/>
                            <field name="standard_id" placeholder="Select Standard" widget="selection"/>
                            <field name="year_id" placeholder="Select Year" widget="selection"/>
                            <field name="class_room_id" options="{&quot;no_create&quot;: True}" invisible="1"/>
                            <field name="user_ids" invisible="1"/>
                        </group>
                      <notebook colspan="4">
                        <!--    <page string="TimeTable">
                                <field name="timetable_ids" nolabel="1" colspan="4">
                                    <tree string="TimeTable" editable="top">
                                      <field name="week_day"/>
                                       <field name="subject_id" required="1" options='{"no_open": True, "no_create": True}'/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                        <field name="teacher_id" options='{"no_open": True, "no_create": True}' required="1"/>
                                        <field name="class_room_id" options='{"no_open": True, "no_create": True}'/>

                                    </tree>
                             </field>
                            </page>-->
                            <page string="Monday">
                                <field name="timetable_mon" domain="[('week_day','=', 'Monday')]"  context="{'default_week_day': 'Monday'} ">
                                    <tree string="Monday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                         <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tuesday">
                                <field name="timetable_tue" domain="[('week_day','=', 'Tuesday')]"  context="{'default_week_day': 'Tuesday'}">
                                    <tree string="Tuesday" editable="bottom">
                                              <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                        <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>

                                    </tree>
                                </field>
                            </page>
                            <page string="Wednesday">
                                <field name="timetable_wed" domain="[('week_day','=', 'Wednesday')]"  context="{'default_week_day': 'Wednesday'}">
                                        <tree string="Wednesday" editable="bottom">
                                                  <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                             <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>

                                        </tree>
                                    </field>
                            </page>
                            <page string="Thursday">
                                <field name="timetable_thur" domain="[('week_day','=', 'Thursday')]"  context="{'default_week_day': 'Thursday'}">
                                    <tree string="Thursday" editable="bottom">
                                                <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                        <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Friday">
                                <field name="timetable_fri" domain="[('week_day','=', 'Friday')]"  context="{'default_week_day': 'Friday'}">
                                    <tree string="Friday" editable="bottom">
                                                  <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                        <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Saturday">
                                <field name="timetable_sat" domain="[('week_day','=', 'Saturday')]"  context="{'default_week_day': 'Saturday'}">
                                    <tree string="Saturday" editable="bottom">
                                                <field name="period_id"/>
                                        <field name="start_time" widget="float_time" />
                                        <field name="end_time" widget="float_time"/>
                                        <field name="subject_id"/>
                                        <field name="teacher_id"/>
                                        <field name="class_room_id"/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>

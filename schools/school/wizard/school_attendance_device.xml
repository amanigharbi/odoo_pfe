<?xml version="1.0" encoding="utf-8"?>

<odoo>
       <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_school_attendance_device_form" model="ir.ui.view">
        <field name="name">school.attendance.device.form</field>
        <field name="model">school.attendance.device</field>
        <field name="arch" type="xml">
            <form string="Add Student In Device">
                    <group>

                        <field name="student_name"  placeholder="Enter Student Name" widget="many2many_tags" string="Student Name"/>
                        <field name="device_name" placeholder="Enter Device Name" />
                    </group>
                    <footer>
                        <button class="btn btn-sm btn-default fa fa-plus" name="button_add" type="object" string="Add"/>
                    </footer>
           </form>
        </field>
    </record>


    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_school_attendance_device_form" model="ir.actions.act_window">
        <field name="name">Add Student In Device</field>
        <field name="res_model">school.attendance.device</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_school_attendance_device_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_school_attendance_device_form" name="Add Student In Device" parent="menu_students_parents" action="action_school_attendance_device_form"  sequence="32"/>

</odoo>
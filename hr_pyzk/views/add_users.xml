<?xml version="1.0" encoding="utf-8"?>

<odoo>
       <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_add_users_form" model="ir.ui.view">
        <field name="name">add_users.form</field>
        <field name="model">add.users</field>
        <field name="arch" type="xml">
            <form string="add users">

                    <footer>
                        <button class="btn btn-sm btn-default fa fa-plus" name="button_add" type="object" string="add"/>
                    </footer>
                                    <div class="alert alert-success alert-dismissible" invisible="not context.get('show_message1', False)">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">X</a>
                        <strong>Success!</strong> Fingerprint User has been created successfully.
                    </div>

                    <div class="alert alert-danger alert-dismissible" invisible="not context.get('show_message2', False)">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">X</a>
                        <strong>Warning!</strong> pyzk_id has already been taken. Please choose a new pyzk_id .
                    </div>
           </form>
        </field>
    </record>
 <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_add_users_form" model="ir.actions.act_window">
        <field name="name">add users</field>
        <field name="res_model">add.users</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_add_users_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_add_users_form" name="add users" parent="users_sub_menu" action="action_add_users_form" />

</odoo>
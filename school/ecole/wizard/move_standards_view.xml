<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_move_classes_form" model="ir.ui.view">
        <field name="nom">move_classes.form</field>
        <field name="model">move.classes</field>
        <field name="arch" type="xml">
            <form string="Déplacer des classes">
                    <group>
                        <field name="annee_scolaire_id" placeholder="Entrer Année Académique" widget="selection"/>
                    </group>
                    <footer>
                        <button class="btn btn-sm btn-default fa fa-ban" special="annuler" string="Fermer"/>
                        <button class="btn btn-sm btn-default fa fa-plus" name="move_debut" string="Déplacer" type="object"/>
                    </footer>
           </form>
        </field>
    </record>
    
    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_move_classes_form" model="ir.actions.act_window">
        <field name="nom">Déplacer des classes</field>
        <field name="res_model">move.classes</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_move_classes_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_move_classes_form" name="Déplacer des classes" parent="menu_configuration" action="action_move_classes_form" />

</odoo>

<?xml version="1.0" encoding="utf-8"?>

<odoo>
       <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_statistiques_descipline_form" model="ir.ui.view">
        <field name="nom">statistique_eleve.form</field>
        <field name="model">statistique.eleve</field>
        <field name="arch" type="xml">
    <form string="statistique descipline">
                    <group>
                         <field name="classe_id" placeholder="Choisir classe .." widget="many2many_tags"/>
                        <field name="date_id" placeholder="Choisir date .." widget="selection"/>
                    <!--    <field  name="academic_year" placeholder="Choisir Année scolaire..."  widget="selection" string="Année Scolaire"/> -->

                    </group>

                    <footer>
                        <button class="oe_highlight" name="print_report" type="object"  string="Imprimer"/>
                    </footer>
           </form>
        </field>
    </record>


    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_statistiques_descipline_form" model="ir.actions.act_window">
        <field name="nom">Statistique eleve</field>
        <field name="res_model">statistique.eleve</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_statistiques_descipline_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem  id="menu_statistiques" name="Statistiques" parent="menu_ecole" />
<menuitem id="menu_statistiques_descipline_form" name="Desciplines" parent="menu_statistiques" action="action_statistiques_descipline_form" />
</odoo>
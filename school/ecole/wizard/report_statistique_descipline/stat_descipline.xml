<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_stat_descipline"  priority="17">
        <t t-call="web.html_container">
         <t t-call="web.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th style="text-align:left;"><strong>Classe </strong></th>
                                   <th style="text-align:left;"><strong>Pourcentage des Absences</strong></th>
                                   <th style="text-align:left;"><strong>Pourcentage des Retards </strong></th>
                                     <th style="text-align:left;"><strong>Pourcentage des Avertissement</strong></th>
                                   <th style="text-align:left;"><strong>Pourcentage des Exclus</strong></th>
                                    <th style="text-align:left;"><strong>Par </strong></th>

                                </tr>
                            </thead>

                              <tbody>
                                   <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td style="text-align:left;">
                                            <t t-esc="doc['nom']"/>
                                        </td>
                                      <td style="text-align:left;">
                                            <t t-esc="doc['pourcentageAbsent']"/> %
                                        </td>
                                         <td style="text-align:left;">
                                            <t t-esc="doc['pourcentageRetard']"/> %
                                        </td>
                                            <td style="text-align:left;">
                                            <t t-esc="doc['pourcentageAvert']"/> %
                                        </td>
                                         <td style="text-align:left;">
                                            <t t-esc="doc['pourcentageExclu']"/> %
                                        </td>

                                             <td style="text-align:left;">
                                            <t t-esc="doc['par']"/>
                                        </td>
                                    </tr>
                                    </t>
                            </tbody>
                        </table>
                    </div>

                </div>
</t>
        </t>
    </template>

</odoo>





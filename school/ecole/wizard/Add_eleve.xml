<?xml version="1.0" encoding="utf-8"?>

<odoo>
       <!-- Assign Roll Number Wizard Form View  -->
    <record id="view_add_eleve_form" model="ir.ui.view">
        <field name="name">add_eleve.form</field>
        <field name="model">add.eleve</field>
        <field name="arch" type="xml">
            <form string="Ajouter Elève">
                    <group>

                        <field name="eleve_name"  placeholder="Entrez Nom D'Elève" widget="many2many_tags" string="eleve name"/>
                        <field name="device_name" placeholder="Nom De Dispositif" />
                    </group>

                    <footer>
                        <button class="btn btn-sm btn-default fa fa-plus" name="button_add" type="object" string="Ajouter"/>
                    </footer>
           </form>
        </field>
    </record>


    <!-- Action Of Form & Tree Views Of Move Classes -->
    <record id="action_add_eleve_form" model="ir.actions.act_window">
        <field name="name">Ajouter Elève</field>
        <field name="res_model">add.eleve</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_add_eleve_form" />
        <field name="target">new</field>
    </record>

    <!-- MenuItem For Configurations->Move Classes -->
    <menuitem id="menu_add_eleve_form" name="Enregistrement elève" parent="menu_eleves_parents" action="action_add_eleve_form" />

</odoo>
<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- search View Of Parent's Profiles -->
        <record id="view_ecole_parent_search" model="ir.ui.view">
            <field name="nom">ecole.parent.search</field>
            <field name="model">ecole.parent</field>
            <field name="arch" type="xml">
                <search string="Rechercher Parent">
                   <field name="nom" filter_domain="['|','|',('displayname','ilike',self),('ref','=',self),('email','ilike',self)]"/>
                   <separator/>
                   <filter string="Archivé" name="inactive" domain="[('active','=',False)]"/>
               </search>
            </field>
        </record>

        <!-- tree View Of Parent's Profiles -->
        <record id="view_ecole_parent_tree" model="ir.ui.view">
            <field name="nom">ecole.parent.tree</field>
            <field name="model">ecole.parent</field>
            <field name="arch" type="xml">
                <tree string="Parents">
                    <field name="nom" string="Nom"/>
                    <field name="relation_id"/>
                    <field name="telephone" string="Numéro Télephone"/>
                    <field name="email" />
                    <field name="ville" string="Ville"/>
                    <field name="pays_id" string="Pays"/>
                    
                </tree>
            </field>
        </record>

        <!-- Form View Of Parent's Profiles -->
        <record id="view_ecole_parent_form" model="ir.ui.view">
            <field name="nom">ecole.parent.form</field>
            <field name="model">ecole.parent</field>
            <field name="arch" type="xml">
                <form string="Parents">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_no_one" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <field name="type" invisible="1"/>
                    <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="nom" default_focus="1" placeholder="Nom" attrs="{'required' : [('type', '=', 'contact')]}"/>
                        </h1>
                    </div>
                    <div>
                        <label for="relation_id"/>
                        <field name="relation_id"/>
                    </div>
                    <group>
                        <group string="Adresse Postale" name="postal_address">
                            <label for="street" string="Adresse"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Rue..." class="o_address_street"/>
                                <field name="ville" placeholder="Ville" class="o_address_city"/>
                                <field name="etat_id" class="o_address_state" placeholder="Etat"
                                       options="{&quot;no_open&quot;: True}"
                                       context="{'pays_id': pays_id}"/>
                                <field name="pays_id" placeholder="Pays" class="o_address_country"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                        </group>
                        <group string="Communication" name="communication">
                            <field name="telephone" string="Numéro Téléphone" widget="telephone"/>
                            <field name="mobile" string="Numéro Portable" widget="telephone"/>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" string="Adresse Email" widget="email" required="1" />
                            <field name="title" string="Travail" options="{&quot;no_open&quot;: True}" />
                            <field name="lang" string="Langue"/>
                            <field name="category_id" widget="many2many_tags" placeholder="Mots Clés..." invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="enfant" string="Enfants">
                            <field name="eleve_id" colspan="4" domain="[('etat','=','terminé')]"/>
                        </page>
                              <page string="Historique Notification" >
                            <field name="notification_ids" nolabel="1" colspan="4">
                                <tree string="Historique Notification">
                                   <field name="eleve_id"/>
                                <field name="titre"/>
                    <field name="message"/>
                    <field name="etat_message"/>
                    <field name="parent_id" invisible="1"/>

                                </tree>
                            </field>
                         </page>


                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

        <!-- Action View Of ecole parent-->

        <record id="action_ecole_parent_form" model="ir.actions.act_window">
            <field name="nom">Profile Parent</field>
            <field name="res_model">ecole.parent</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

            <!-- Menu Item Parent-->
    <menuitem id="menu_parent_parents" name="Parents" parent="menu_ecole"  sequence="5" action="action_ecole_parent_form"
            groups="ecole.group_ecole_administration,ecole.group_ecole_eleve,ecole.group_ecole_enseignant,ecole.group_ecole_parent"/>

    </data>
</odoo>

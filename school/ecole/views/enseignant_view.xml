<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- search View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_search" model="ir.ui.view">
            <field name="name">ecole.enseignant.search</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <search string="Employés">
                    <field name="name" string="Employés" filter_domain="['|',('work_email','ilike',self),('name','ilike',self)]"/>
                    <field name="department_id"/>
                    <field name="category_ids" groups="hr.group_hr_user"/>
                    <field name="job_id"/>
                    <filter string="Messages non lus" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                    <filter string="Archivé" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Groupe Par">
                        <filter name="manager" string="Directeur" domain="[]" context="{'group_by':'parent_id'}"/>
                        <filter name="coach" string="Entraîneur" domain="[]" context="{'group_by':'coach_id'}"/>
                        <filter name="department" string="Départment" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter name="job" string="Emploi" domain="[]" context="{'group_by':'job_id'}"/>
                        <filter name="company" string="Entreprise" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- tree View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_tree" model="ir.ui.view">
            <field name="name">ecole.enseignant.tree</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <tree string="Faculté" decoration-bf="message_needaction==True">
                    <field name="name"/>
                    <field name="work_phone" invisible="1"/>
                    <field name="phone_numbers"/>
                    <field name="work_email"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="department_id"/>
                    <field name="job_id"/>
                    <field name="parent_id"/>
                    <field name="coach_id" invisible="1"/>
                    <field name="message_needaction" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Form View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_form" model="ir.ui.view">
            <field name="name">ecole.enseignant.form</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <form string="Faculté">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="hr.group_hr_user">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom D'Enseignant" required='1'/>
                            </h1>
                        </div>
                        <field name="category_ids" widget="many2many_tags" placeholder="ex. Temps Partiel" groups="hr.group_hr_user"/>
                        <group>
                            <field name="standard_id" widget="selection"/>
                         <!--  <field name="standard_ids" required="1" widget="many2many_tags"/> -->
                            <field name="subject_id" required="1" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="ecole_id" widget="selection" required="1"/>
                        </group>
                        <group>
                            <field name="is_parent"/>
                            <field name='stu_parent_id' attrs="{'invisible':[('is_parent','=',False)]}"/>
                        </group>
                        <notebook>
                            <page name="public" string="Information Publique">
                                <group>
                                    <group string="Contact Information">
                                        <field name="address_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}" string="Adresse Professionnelle"/>
                                        <field name="mobile_phone" />
                                        <field name="work_location" />
                                        <field name="work_email" widget="email" required="1"/>
                                        <field name="work_phone" invisible="1"/>
                                        <field name="phone_numbers"/>
                                    </group>
                                    <group string="Position">
                                        <field name="department_id"/>
                                        <field name="job_id"/>
                                        <field name="parent_id"/>
                                        <field name="coach_id"/>
                                    </group>
                                </group>
                                <field name="notes" placeholder="Autres Information ..." colspan="4"/>
                            </page>
                            <page string="Informations Personalles" groups="hr.group_hr_user">
                                <group>
                                    <group string="Citizenship &amp; Other Information">
                                        <field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        <field name="identification_id" groups="hr.group_hr_user"/>
                                        <field name="passport_id" groups="hr.group_hr_user"/>
                                        <field name="bank_account_id"/>
                                    </group>
                                    <group string="Informations de contact">
                                        <field name="address_home_id" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                                    </group>
                                    <group string="Status">
                                        <field name="gender"/>
                                        <field name="marital"/>
                                    </group>
                                    <group string="Birth">
                                        <field name="birthday"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Children" attrs="{'invisible': [('is_parent','=', False)]}">
                                 <field name="eleve_id" domain="[('state', '=', 'done')]"/>
                            </page>
                            <page string="HR Settings" groups="hr.group_hr_user" invisible="1">
                                <group>
                                    <group string="Status" name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="user_id" string="Utilisateur associé" context="{'default_groups_ref': ['base.group_user']}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action View Of ecole enseignant-->

        <record id="action_ecole_enseignant_form" model="ir.actions.act_window">
            <field name="name">Profile Enseignant</field>
            <field name="res_model">ecole.enseignant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item Enseignant-->
    <menuitem id="menu_enseignant_parents" name="Enseignant" parent="menu_ems" sequence="4" action="action_ecole_enseignant_form"  groups="ecole.group_ecole_administration,ecole.group_ecole_enseignant"/>


    </data>
</odoo>

<?xml version="1.0" ?>
<odoo>
    <data>

        <!-- search View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_search" model="ir.ui.view">
            <field name="nom">ecole.enseignant.search</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <search string="Employés">
                    <field name="nom" string="Employés" filter_domain="['|',('email_travail','ilike',self),('nom','ilike',self)]"/>
                    <field name="department_id"/>
                    <field name="categorie_ids" groups="hr.group_hr_user"/>
                    <field name="job_id"/>
                    <filter string="Archivé" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Groupe Par">
                        <filter name="manager" string="Directeur" domain="[]" context="{'groupe_par':'parent_id'}"/>
                        <filter name="department" string="Départment" domain="[]" context="{'groupe_par':'department_id'}"/>
                        <filter name="job" string="Emploi" domain="[]" context="{'groupe_par':'job_id'}"/>
                        <filter name="company" string="Entreprise" domain="[]" context="{'groupe_par':'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- tree View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_tree" model="ir.ui.view">
            <field name="nom">ecole.enseignant.tree</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <tree string="Faculté" decoration-bf="message_needaction==True">
                    <field name="nom" string="Nom Enseignant"/>
                    <field name="telephone_travail" invisible="1"/>
                    <field name="numero_telephone"/>
                    <field name="email_travail" string="Email de Travail"/>
                    <field name="company_id" groups="base.group_multi_company" string="Ecole"/>
                    <field name="department_id" string="Département"/>
                    <field name="job_id" invisible="1"/>
                    <field name="parent_id" invisible="1"/>

                </tree>
            </field>
        </record>

        <!-- Form View Of Teahcer's Profiles -->
        <record id="view_ecole_enseignant_form" model="ir.ui.view">
            <field name="nom">ecole.enseignant.form</field>
            <field name="model">ecole.enseignant</field>
            <field name="arch" type="xml">
                <form string="Faculté">
                    <sheet>
                        <div class="oe_button_box" name="button_box" groups="hr.group_hr_user">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}"/>
                        <div class="oe_title">
                            <label for="nom" class="oe_edit_only"/>
                            <h1>
                                <field name="nom" string="Nom D'Enseignant" placeholder="Nom D'Enseignant" required='1'/>
                            </h1>
                        </div>
                        <field name="categorie_ids" invisible="1" widget="many2many_tags" placeholder="ex. Temps Partiel" groups="hr.group_hr_user"/>
                        <group>
                            <field name="classe_id" widget="selection"/>
                         <!--  <field name="classe_ids" required="1" widget="many2many_tags"/> -->
                            <field name="matiere_id" required="1" widget="many2many_tags" options="{'no_create': True}"/>
                            <field name="ecole_id" widget="selection" required="1"/>
                        </group>
                        <group>
                            <field name="est_parent"/>
                            <field name='stu_parent_id' attrs="{'invisible':[('est_parent','=',False)]}"/>
                        </group>
                        <notebook>
                            <page name="public" string="Information Publique">
                                <group>
                                    <group string="Contact Information">
                                        <field name="address_id" invisible="1" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}" string="Adresse Professionnelle"/>
                                        <field name="telephone_portable" invisible="1"/>
                                        <field name="lieu_travail" string="Lieu de Travail"/>
                                        <field name="email_travail" widget="email" required="1" string="Email de Travail"/>
                                        <field name="telephone_travail" invisible="1"/>
                                        <field name="numero_telephone"/>
                                    </group>
                                    <group string="Position">
                                        <field name="department_id" string="Département"/>
                                        <field name="job_id" invisible="1"/>
                                        <field name="parent_id" string="Directeur"/>
                                    </group>
                                </group>

                            </page>
                            <page string="Informations Personalles" groups="hr.group_hr_user">
                                <group>
                                    <group string="Autres Informations">
                                        <field name="pays_id" string="Nationnalité" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        <field name="identification_id" string="Numéro Carte D'identité" groups="hr.group_hr_user"/>
                                        <field name="passport_id" string="Numéro Passport" groups="hr.group_hr_user"/>
                                        <field name="bank_account_id" string="Numéro Compte Banque"/>
                                    </group>
                                    <group string="Informations de contact">
                                        <field name="address_home_id" string="Adresse Privé" context="{'show_address': 1}" options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                                    </group>
                                    <group string="Status">
                                        <field name="sexe" string="Sexe"/>
                                        <field name="marital" string="Etat Civil"/>
                                    </group>
                                    <group string="Naissance">
                                        <field name="birthday" string="Date De Naissance"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Enfant" attrs="{'invisible': [('est_parent','=', False)]}">
                                 <field name="eleve_id" domain="[('etat', '=', 'terminé')]"/>
                            </page>
                            <page string="HR Settings" groups="hr.group_hr_user" invisible="1">
                                <group>
                                    <group string="Status" name="active_group">
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="user_id" string="Utilisateur associé" context="{'default_groups_ref': ['base.group_user']}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action View Of ecole enseignant-->

        <record id="action_ecole_enseignant_form" model="ir.actions.act_window">
            <field name="nom">Profile Enseignant</field>
            <field name="res_model">ecole.enseignant</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item Enseignant-->
    <menuitem id="menu_enseignant_parents" name="Enseignant" parent="menu_ecole" sequence="4" action="action_ecole_enseignant_form"  groups="ecole.group_ecole_administration,ecole.group_ecole_enseignant"/>


    </data>
</odoo>
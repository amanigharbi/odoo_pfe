<?xml version="1.0"?>
<odoo>
        <!-- Form View Of emploie Information -->
        <record id="view_emploie_emploie_form" model="ir.ui.view">
            <field name="nom">emploie.emploie.form</field>
            <field name="model">emploie.emploie</field>
            <field name="arch" type="xml">
                <form string="Calendrier">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="nom" placeholder="Entrer Déscription"/>
                            <field name="classe_id" placeholder="Selectionnez classe" widget="selection"/>
                            <field name="annee_id" placeholder="Selectionnez Année" widget="selection"/>
                            <field name="salle_classe_id" options="{&quot;no_create&quot;: True}" invisible="1"/>
                            <field name="user_ids" invisible="1"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Calendrie">
                                <field name="emploie_ids" nolabel="1" colspan="4">
                                    <tree string="Calendrier" editable="top">
                                        <field name="jour_semaine"/>
                                        <field name="matiere_id" required="1" options='{"no_open": True, "no_create": True}'/>
                                        <field name="heure_debut"/>
                                        <field name="heure_fin"/>
                                        <field name="enseignant_id" options='{"no_open": True, "no_create": True}' required="1"/>
                                        <field name="salle_classe_id" options='{"no_open": True, "no_create": True}'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree View Of emploie Information -->
        <record id="view_emploie_emploie_tree" model="ir.ui.view">
            <field name="nom">emploie.emploie.tree</field>
            <field name="model">emploie.emploie</field>
            <field name="arch" type="xml">
                <tree string="Calendrier">
                    <field name="nom"/>
                    <field name="classe_id"/>
                    <field name="annee_id"/>
                </tree>
            </field>
        </record>
        <!-- Search View emploie Information -->
        <record id="emploie_search" model="ir.ui.view">
            <field name="nom">emploie.emploie.search</field>
            <field name="model">emploie.emploie</field>
            <field name="arch" type="xml">
                <search string="emploie">
                    <field name="nom"/>
                    <field name="classe_id"/>
                    <field name="annee_id"/>
                    <newline/>
                    <group expand="1" string="Groupe Par">
                        <filter name="classe" string="Classe scolaire" help="par class"
                                context="{'groupe_par':'classe_id'}"/>
                        <filter name="annee" string="annee" help="Par Année" context="{'groupe_par':'annee_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- Actions Of Form & Tree Views Of emploie Information -->
        <record id="action_emploie" model="ir.actions.act_window">
            <field name="nom">Horaires réguliers</field>
            <field name="res_model">emploie.emploie</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('emploie_type','=','reguliere')]</field>
            <field name="context">{'default_emploie_type':'reguliere'}</field>
        </record>
       </odoo>
